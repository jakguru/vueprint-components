{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "verbatimModuleSyntax": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@jakguru/vueprint-components/*": [
        "./src"
      ],
    },
  },
  "include": [
    "src/**/*",
    "docs/**/*",
    "docs/.vitepress/**/*",
    "src/**/*.vue",
    "docs/**/*.vue",
    "docs/.vitepress/**/*.vue",
    "bin/**/*",
    "repl/**/*",
    "vite.config.ts"
  ]
}